<% if @article.errors.any? %>
<h2> The following errors prevented the creation of your article</h2>
    <ul>
        <% @article.errors.full_message.each do |msg| %>
            <li> <%= msg %> </li> 
        <% end %>
    </ul>

<%end %>
<%= form_for @article do |t| %>
    <p> 
        <%= t.label :title %> <br/>
        <%= t.text_field :title %>
    </p>
    
    <p> 
        <%= t.label :description %> <br/>
        <%= t.text_area :description %> 
    </p>
    <p> 
        <%= t.submit %>
    </p>
<% end %>